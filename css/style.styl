azul = #22BCE0
gris_oscuro = #444
naranja = #DD4F24
gris_texto = #7A7A7A
@import url(http://fonts.googleapis.com/css?family=Tangerine:400,700);

a
	color naranja

.mal
	color gris_oscuro
	background-color red

.bien
	color gris_oscuro
	background-color green

body
	background #E8E8E8
	color gris_oscuro
	font-family Arial
	font-size 16px

footer
	background naranja
	color rgba(white,0.5)
	padding 1em 0
	text-align center
	width 100%

	h3
		font-size 14px
		font-weight normal

		strong
			display block 

		.copy
			&:before
			&:after
				content " - "

header
	background gris_oscuro
	box-shadow 0 5px 0 rgba(0,0,0,0.2)
	color white
	overflow hidden
	padding 0.5em
	position relative
	z-index 2

	.logo
		border-right 1px solid azul
		float left
		width 60px

		img
			width 52px

	.titular
		margin 0 80px 0 70px

		.cabecera
			font-family Tangerine
			font-style cursive
			font-size 60px
			font-weight normal
			margin 0
			padding 0

nav
	background azul
	border-left 15px solid white
	position relative

	&:before
		border-bottom 20px solid transparent
		border-left 7px solid white
		border-top 20px solid transparent
		content ""
		left 0px
		position absolute
		top 0

	.menu
		height 40px
		line-height 40px
		margin 0
		padding 0
		overflow-x auto
		white-space nowrap

		&::-webkit-scrollbar
			display none

		li
			display inline-block

			a
				color white
				display block
				margin 0 0.5em
				padding 0 0.2em
				text-decoration none

				&:hover
					background rgba(black,0.1)

.posts
	padding 0.5em

	.post
		background white
		border-radius 0 0 0.5em 0.5em
		box-shadow 2px 2px 10px rgba(black, 0.5)
		color gris_texto
		margin-bottom 0.5em

		.acciones
			border-top 3px solid azul
			padding 0.5em
			overflow hidden

			.datos
				float right

				.comentarios
					background gris_oscuro
					border-radius 3px
					color white
					margin 0 1em 0 0
					padding 2px 5px
					text-decoration none

				.estrellita
					text-decoration none

					&:after
						color #FCB92D
						content "\e601"
						font-family "iconitos"
						font-size 1.1em

			.votos
				float left

				.down
				.up
					text-decoration none
					&:before
						font-family "iconitos"
						font-size 1.5em
						vertical-align middle
				.down
					color red
					&:before
						content "\e602"

				.up
					color green
					&:before
						content "\e603"

		.descripcion

			.detalles
				//height 160px
				margin-left 130px

				.fecha
					float right
					margin 0 0 0 0

				.titulo
					color gris_oscuro
					font-size 18px
					font-style italic
					margin 0
					padding 1.5em 0.5em 0 0

			.imagen
				float left

				img
					height 140px
					vertical-align top
					width 180px

.progress {
			width:0%;
			overflow:hidden;
			height:40px;
			display:inline-block;
			vertical-align:middle;
			color:#FFF;
			text-align:right;
			text-shadow:1px 1px 0 #000;
			background:-o-linear-gradient(top,#888888,#333333);
			background:-moz-linear-gradient(top,#888888,#333333);
			background:-webkit-gradient(linear,left top,left bottom,from(#888888),to(#333333));
			background:-webkit-linear-gradient(top,#888888,#333333);
			-o-transition-property:width;
			-o-transition-duration:.5s;
			-moz-transition-property:width;
			-moz-transition-duration:.5s;
			-webkit-transition-property:width;
			-webkit-transition-duration:.5s;
		}					

@media screen and (min-width: 768px)

	body
		width 100%

	header
		.titular
			.titulo
				width 100%
				font-size 1.1em
				padding-left 3em
				position relative

		&:before
			left 0
			font-size 2.5em
			position absolute
			top -10px
			width 100%

	.posts
		.post
			display inline-block
			width 100%
			vertical-align top
			&:nth-child(odd)
				margin-right 2%